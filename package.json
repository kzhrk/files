{
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development npm run postcss:dev & npm run webpack:dev",
    "build": "NODE_ENV=production npm run postcss:pro & npm run webpack:pro",
    "postcss:dev": "postcss ./src/css/*.css -c ./postcss.config.js --map ./public/css/style.css.map -w -b ./src/css -x css -d ./public/css",
    "postcss:pro": "postcss ./src/css/*.css -c ./postcss.config.js --no-map -b ./src/css -x css -d ./public/css",
    "webpack:dev": "webpack -w & webpack-serve",
    "webpack:pro": "webpack --display-used-exports",
    "test": "NODE_ENV=test mocha --compilers js:@babel/register --recursive $(find test -name '*.spec.js')",
    "eslint": "eslint --fix --ext .js ./src webpack.config.js"
  },
  "author": "kzhrk",
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.2",
    "cssnano": "^4.1.0",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.14.2",
    "pug-cli": "^1.0.0-alpha6",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "watch": "^1.0.2",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2"
  }
}
